<div class="min-h-screen flex items-center justify-center p-4">
  <div class="card bg-base-100 shadow-2xl border border-base-200 w-full max-w-lg">
    <div class="card-body p-8">
      <div class="text-center mb-2">
        <h2 class="text-3xl font-bold mb-4">Welcome Back</h2>
        <p class="text-base-content/70 mb-6">Sign in to continue your learning journey</p>
      </div>

      <form action="/auth/login" method="POST" class="space-y-5">
        <!-- Email Input -->
        <div class="form-control">
          <label class="label">
            <span class="label-text font-medium text-base-content/80">Email</span>
          </label>
          <input
            type="email"
            name="email"
            placeholder="john@example.com"
            class="input input-bordered input-primary focus:ring-2 focus:ring-primary/50 h-12"
            required
          />
        </div>

        <!-- Password Input -->
        <div class="form-control">
          <label class="label">
            <span class="label-text font-medium text-base-content/80">Password</span>
          </label>
          <input
            type="password"
            name="password"
            placeholder="••••••••"
            class="input input-bordered input-primary focus:ring-2 focus:ring-primary/50 h-12"
            required
          />
          <label class="label">
            <a href="/auth/forgot-password" class="label-text-alt link link-hover text-primary mt-1">
              Forgot password?
            </a>
          </label>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit" 
          class="btn btn-primary btn-block h-12 text-lg font-medium hover:opacity-90 transition-opacity"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          Sign In
        </button>
      </form>

      <div class="divider my-8">OR</div>

      <div class="text-center text-sm">
        <span class="text-base-content/70">New to our platform? </span>
        <a 
          href="/auth/register" 
          class="link link-primary font-medium hover:underline underline-offset-4"
        >
          Create account
        </a>
      </div>
    </div>
  </div>
</div>